<Calculator>:
    name : "calculator"
    RelativeLayout:
        MDTextField:
            id : altitude_input
            pos_hint : {"x": 0, "center_y": .7}
            hint_text: "Altitude /km"
            helper_text: "Enter a number with two maximum decimal places"
            helper_text_mode: "on_focus"
            size_hint : (.3, None)
            font_size : 40
            on_text_validate : root.refresh_values()

        MDTextField:
            id : U_input
            pos_hint : {"x": 0, "center_y": .3}
            hint_text: "Humidity (U)"
            helper_text: "Enter a number between 0 and 1 with two decimal digits"
            helper_text_mode: "on_focus"
            size_hint : (.3, None)
            fill_color: 0, 0, 0, 0
            font_size : 40
            on_text_validate : root.refresh_values()

        MDFillRoundFlatIconButton:
            id : return_calculator
            text : "Go Back"
            icon : "arrow-left-bold"
            pos_hint : {"x": 0, "y": 0}
            font_size : 30
            on_release:
                app.root.current = "menu"
                root.manager.transition.direction = "right"

        MDLabel:
            id: boiling_label
            halign : "center"
            color : "#e9c46a"
            pos_hint : {"center_x": .5, "center_y": .9}
            size_hint : (.4, None)
            text: "Boiling"
            font_size: "40"

        MDLabel:
            id: boiling_value
            halign : "center"
            pos_hint : {"center_x": .5, "center_y": .8}
            size_hint : (.4, .1)
            text: str(root.boiling_point)
            font_size: "30"

        MDLabel:
            id: dew_label
