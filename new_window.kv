WindowManager:
	MenuWindow:
	Task1:
	Task2:
	Task3:
	Calculator:

<MenuWindow>:
	name: "menu"

	RelativeLayout:
		orientation: "vertical"
		size: root.width, root.height

		MDLabel:
			text: "Main Menu"
			font_size : "80sp"
			halign : "center"
			pos_hint : {"center_x": .5, "center_y" : .8}
			size_hint : (0.6, 0.2)

		MDFillRoundFlatButton:
			text : "Task 1"
			font_size : "70sp"
			pos_hint : {"center_x": .5, "center_y" : .6}
			size_hint : (0.3, 0.1)
			on_release:
				app.root.current = "task1"
				root.manager.transition.direction = "left"

        MDFillRoundFlatButton:
			text : "Task 2"
			font_size : "70sp"
			pos_hint : {"center_x": .5, "center_y" : .45}
			size_hint : (0.3, 0.1)
			on_release:
				app.root.current = "task2"
				root.manager.transition.direction = "left"

        MDFillRoundFlatButton:
			text : "Task 3"
			font_size : "70sp"
			pos_hint : {"center_x": .5, "center_y" : .3}
			size_hint : (0.3, 0.1)
			on_release:
				app.root.current = "task3"
				root.manager.transition.direction = "left"

	    MDFillRoundFlatButton:
			text : "Calculator"
			font_size : "70sp"
			pos_hint : {"center_x": .5, "center_y" : .15}
			size_hint : (0.5, 0.1)
			on_release:
				app.root.current = "calculator"
				root.manager.transition.direction = "left"

<Task1>:
	name: "task1"
	RelativeLayout:
		orientation: "vertical"
		size: root.width, root.height

        Image:
            source : 'task1.jpg'
            allow_stretch : True
            keep_ratio : True
            size_hint : (1, 1)
            pos_hint : {"x" : 0, "y" : 0.05}

		MDFillRoundFlatIconButton:
			text : "Go Back"
			icon : "arrow-left-bold"
			font_size: 32
			pos_hint : {"x": 0, "y": 0}
			on_release:
				app.root.current = "menu"
				root.manager.transition.direction = "right"

<Task2>:
	name: "task2"
	RelativeLayout:
		orientation: "vertical"
		size: root.width, root.height

		MDLabel:
            halign: "center"
			text: "Task 2"
			font_style: "H2"

        Image:
            source : 'task2.jpg'
            allow_stretch : True
            keep_ratio : True
            size_hint : (1, 1)
            pos_hint : {"x" : 0, "y" : 0.1}

		MDFillRoundFlatIconButton:
			text : "Go Back"
			icon : "arrow-left-bold"
			font_size: 32
			pos_hint : {"x": 0, "y": 0}
			on_release:
				app.root.current = "menu"
				root.manager.transition.direction = "right"


<Task3>:
    name: "task3"
    MDBottomNavigation:
        MDBottomNavigationItem:
            name: "lapse"
            text: "Lapse Rate"
            icon: "arrow-up-bold-circle"

            RelativeLayout:
                orientation: "vertical"
                size: root.width, root.height

                Image:
                    id : graph_lapse
                    source : 'task3_lapse_rate.jpg'
                    allow_stretch : True
                    keep_ratio : True
                    size_hint : (.7, .7)
                    pos_hint : {"center_x" : .5, "y" : 0.3}

                MDLabel:
                    id : U_label_lapse
                    text : "U Value"
                    halign : "center"
                    pos_hint : {"center_x": .3, "center_y": .3}
                    size_hint : (.3, .3)
                    font_size : "40"

                MDLabel:
                    id: U_slider_label_lapse
                    halign : "center"
                    pos_hint : {"center_x": .3, "center_y": .25}
                    size_hint : (.4, .5)
                    text: str(round(U_slider_lapse.value, 2))
                    font_size: "30"

                MDSlider:
                    id: U_slider_lapse
                    pos_hint : {"center_x": .3, "center_y": .2}
                    size_hint : (.4, .4)
                    hint : False
                    min:0
                    max:1

                MDFillRoundFlatIconButton:
                    id : return_lapse
                    text : "Go Back"
                    icon : "arrow-left-bold"
                    pos_hint : {"x": 0, "y": 0}
                    font_size : 30
                    on_release:
                        app.root.current = "menu"
                        root.manager.transition.direction = "right"

                MDFillRoundFlatIconButton
                    id : generate_lapse
                    text : "Generate"
                    icon : "reload"
                    font_size : 30
                    pos_hint : {"center_x": .75, "y": .2}
                    on_press : root.new_lapse(U_slider_lapse.value)

