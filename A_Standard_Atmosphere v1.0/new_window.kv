WindowManager:
	MenuWindow:
	Task1:
	Task2:
	Task3:
	Calculator:
	Planets:

<MenuWindow>:
	name: "menu"

	RelativeLayout:
		orientation: "vertical"
		size: root.width, root.height

		MDLabel:
			text: "Main Menu"
			font_size : "80sp"
			halign : "center"
			pos_hint : {"center_x": .5, "center_y" : .9}
			size_hint : (0.6, 0.2)

		MDFillRoundFlatButton:
			text : "Task 1"
			font_size : "70sp"
			pos_hint : {"center_x": .5, "center_y" : .7}
			size_hint : (0.3, 0.1)
			on_release:
				app.root.current = "task1"
				root.manager.transition.direction = "left"

        MDFillRoundFlatButton:
			text : "Task 2"
			font_size : "70sp"
			pos_hint : {"center_x": .5, "center_y" : .55}
			size_hint : (0.3, 0.1)
			on_release:
				app.root.current = "task2"
				root.manager.transition.direction = "left"

        MDFillRoundFlatButton:
			text : "Task 3"
			font_size : "70sp"
			pos_hint : {"center_x": .5, "center_y" : .4}
			size_hint : (0.3, 0.1)
			on_release:
				app.root.current = "task3"
				root.manager.transition.direction = "left"

	    MDFillRoundFlatButton:
			text : "Calculator"
			font_size : "70sp"
			pos_hint : {"center_x": .5, "center_y" : .25}
			size_hint : (0.5, 0.1)
			on_release:
				app.root.current = "calculator"
				root.manager.transition.direction = "left"

		MDFillRoundFlatButton:
			text : "Planets"
			id : planets_menu
			font_size : "70sp"
			pos_hint : {"center_x": .5, "center_y" : .1}
			size_hint : (0.5, 0.1)
			on_release:
				app.root.current = "planets"
				root.manager.transition.direction = "left"

<Task1>:
	name: "task1"
	RelativeLayout:
		orientation: "vertical"
		size: root.width, root.height

        Image:
            source : 'task1.jpg'
            allow_stretch : True
            keep_ratio : True
            size_hint : (1, 1)
            pos_hint : {"x" : 0, "y" : 0.05}

		MDFillRoundFlatIconButton:
			text : "Go Back"
			icon : "arrow-left-bold"
			font_size: 32
			pos_hint : {"x": 0, "y": 0}
			on_release:
				app.root.current = "menu"
				root.manager.transition.direction = "right"

<Task2>:
	name: "task2"
