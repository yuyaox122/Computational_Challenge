<Task3>:
    name: "task3"
    MDBottomNavigation:
        MDBottomNavigationItem:
            name: "lapse"
            text: "Lapse Rate"
            icon: "arrow-up-bold-circle"

            RelativeLayout:
                orientation: "vertical"
                size: root.width, root.height

                Image:
                    id : graph_lapse
                    source : 'task3_lapse_rate.jpg'
                    allow_stretch : True
                    keep_ratio : True
                    size_hint : (.7, .7)
                    pos_hint : {"center_x" : .5, "y" : 0.3}

                MDLabel:
                    id : U_label_lapse
                    text : "U Value"
                    halign : "center"
