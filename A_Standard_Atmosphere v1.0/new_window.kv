                    size_hint : (.3, .3)
                    font_size : "40"

                MDLabel:
                    id: U_slider_label_lapse
                    halign : "center"
                    pos_hint : {"center_x": .3, "center_y": .25}
                    size_hint : (.4, .5)
                    text: str(round(U_slider_lapse.value, 2))
                    font_size: "30"

                MDSlider:
                    id: U_slider_lapse
                    pos_hint : {"center_x": .3, "center_y": .2}
                    size_hint : (.4, .4)
                    hint : False
                    min:0
                    max:1

                MDFillRoundFlatIconButton:
                    id : return_lapse
                    text : "Go Back"
                    icon : "arrow-left-bold"
                    pos_hint : {"x": 0, "y": 0}
                    font_size : 30
                    on_release:
                        app.root.current = "menu"
                        root.manager.transition.direction = "right"

                MDFillRoundFlatIconButton
